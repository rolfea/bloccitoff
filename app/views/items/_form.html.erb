<h4>Add an item to your list</h4>

<%= form_for [user, item] do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter your new to-do item" %>
  </div>
  <%= f.submit "Add Item", class: 'btn btn-default pull-right' %>
<% end %>
